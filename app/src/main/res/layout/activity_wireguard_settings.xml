<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".preferences.WireGuardSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireguard_settings_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireguard_settings_description"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="24dp" />

        <!-- Enable WireGuard Switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_wireguard_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireguard_enable"
            android:textSize="16sp"
            android:textOn=""
            android:textOff=""
            android:layout_marginBottom="24dp" />

        <!-- Connection Status -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/status_indicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/status_indicator_disconnected" />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/wireguard_status_disconnected"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_test_connection"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wireguard_test_connection" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Local Configuration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireguard_section_local"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Private Key -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_private_key"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/wireguard_private_key"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_private_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:fontFamily="monospace" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Generate Key Button -->
        <Button
            android:id="@+id/btn_generate_keys"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wireguard_generate_keys"
            android:layout_marginBottom="12dp" />

        <!-- Public Key (read-only, derived from private key) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_public_key"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/wireguard_public_key"
            app:endIconMode="custom"
            app:endIconDrawable="@android:drawable/ic_menu_share">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_public_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:singleLine="true"
                android:fontFamily="monospace"
                android:enabled="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tunnel Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_tunnel_address"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/wireguard_tunnel_address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_tunnel_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:text="10.0.0.2" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Peer Configuration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireguard_section_peer"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Peer Public Key -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_peer_public_key"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/wireguard_peer_public_key">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_peer_public_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:fontFamily="monospace" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Peer Endpoint -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_peer_endpoint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/wireguard_peer_endpoint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_peer_endpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:text="example.com:51820" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Preshared Key (optional) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_preshared_key"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/wireguard_preshared_key"
            app:endIconMode="password_toggle"
            app:helperText="@string/wireguard_preshared_key_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_preshared_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:fontFamily="monospace" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Advanced Settings Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireguard_section_advanced"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- MTU -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_mtu"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/wireguard_mtu">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_mtu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                android:text="1420" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Keepalive -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_keepalive"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="@string/wireguard_keepalive"
            app:suffixText="@string/wireguard_keepalive_suffix">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_keepalive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true"
                android:text="25" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Import/Export Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_import_config"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/wireguard_import" />

            <Button
                android:id="@+id/btn_export_config"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/wireguard_export" />

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireguard_save" />

    </LinearLayout>

</ScrollView>

